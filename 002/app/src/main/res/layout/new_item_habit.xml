<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/background_habit_item"
    >



    <!-- Name habit -->

    <!-- Description about habit -->

    <!-- Bad Sport 48 day -->



    <TextView
        android:id="@+id/name_habit"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="top"
        android:text="Name habit"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_habit"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="top"
        android:text="Description about habit"
        android:textColor="@color/white"
        android:textSize="7sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_habit" />

    <!-- 17 -->

    <TextView
        android:id="@+id/paramsHabit"
        android:layout_width="75dp"
        android:layout_height="8dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="top"
        android:text="Bad Sport 48 day"
        android:textColor="@color/white"
        android:textSize="7sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_habit" />


    <TextView

        android:id="@+id/count_repeat"
        android:layout_width="wrap_content"
        android:layout_height="69dp"


        android:layout_marginTop="-13dp"
        android:fontFamily="@font/inter_regular"

        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="171"
        android:textColor="#707070"
        android:textSize="69sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/colorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/button_rectangle"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paramsHabit" />


</androidx.constraintlayout.widget.ConstraintLayout>